$i_flights_form_segment_input_bsh = inset 0 0 5px rgba(#000, 0);
$i_flights_form_segment_input_bsh_hover = inset 0 0 10px rgba(#0B90D6, 0);
$i_flights_form_segment_toRT_hover = inset 0 0 16px rgba($nemo-color-LightPoint, .2);

.nemo-flights-form {
	position: relative;
    margin-top: 30vh;
	font: 13px $nemo-font-main;

	// Setting initial box-sizing and fonts
	&, & * {
		box-sizing: border-box;
	}

	/*&__loader {*/
		/*height: 200px;*/
		/*background: url('images/ui/ui-loader-planes.svg') center center no-repeat;*/
		/*background-size: contain;*/
		/*display: none;*/
	/*}*/

	&__formContainer, &__searchOptions {
		width: 100%;

		&__inner {
			width: 1260px;
			max-width: 1260px;
			margin: 0 auto;
			padding: 20px 30px;
		}
	}

	&__formContainer{
		background: $nemo-color-container-vivid;
		color: $nemo-color-LightPoint;
		position: relative;

		&__inner {
			display: table;
			padding-bottom: 0;
			width: 1280px;
			max-width: 1280px;
		}
	}

	&__additional {
		max-width: 1280px;
		margin: 20px auto;
		padding: 0 30px;

		&__item {
			display: inline-block;
			vertical-align: top;
			width: 50%;

			&_lastSearches {
				text-align: right;
			}
		}

		&__parameters {
			&__toggle {
				display: inline-block;
			}

			&__dropdown {
				left: 0;
				right: auto;
				max-width: 400px;
				width: 100%;
				min-width: 1px;
				padding: 20px;
				color: #636467;
				cursor: auto;
				white-space: normal;
			}

			&__header {
				color: inherit;
			}

			&__item {
				margin-bottom: 20px;

				&:last-child {
					margin: 0;
				}

				&__title {
					display: inline-block;
					vertical-align: top;
					width: 33%;
					padding-right: 10px;
					line-height: 20px;
					padding-top: 5px;

					&_transfers {
						padding-top: 0;
					}
				}

				&__content {
					display: inline-block;
					vertical-align: top;
					width: 67%;

					&__maxPriceField {
						margin: 0;
					}

					&__maxPriceField {
						max-width: 90px;
						padding-right: 25px;
						display: inline-block;
						vertical-align: top;
					}

					&__maxPriceFieldClearer {
						display: inline-block;
						vertical-align: top;
						width: 20px;
						height: 20px;
						margin: 5px 5px 0 -25px;
						opacity: .25;
						cursor: pointer;
						transition: all .2s;
						background: url(images/fsf-sprite.svg) 6px -54px no-repeat;
						position: relative;
						z-index: 1;

						&:hover {
							opacity: 1;
						}
					}

					&__maxPriceCurrency {
						display: inline-block;
						vertical-align: top;
						padding: 5px 0 0 10px;
						line-height: 20px;
					}
				}
			}

			&__checkbox {
				display: block;
				padding: 0;
				margin-bottom: 10px;

				&:last-child {
					margin: 0;
				}

				&__caption {
					&, &:hover {
						color: inherit;
					}
				}
			}

			&__carrierLoading {
				line-height: 20px;
				padding-top: 5px;
			}

			&__timeEnRoute {
				&__subTitle {
					display: inline-block;
					vertical-align: top;
					padding: 5px 10px 0 0;
					line-height: 20px;
				}
			}
		}
	}

	&__route, &__passengers, &__buttonContainer {
		display: table-cell;
		vertical-align: top;
	}

	&__buttonContainer {
		padding-left: 20px;
		white-space: nowrap;
		width: 1%;
		text-align: right;
	}

	&__searchBlockedError {
		max-width: 90vw;
		white-space: normal;
		z-index: 1;
	}

	&__route {
		padding: 0;

		&__segment {
			display: inline-block;
			width: 80%;
			padding-bottom: 20px;

			&_returnSegment {
				width: 20%;
			}

			&_CR, &_returnSegment &__item_date {
				width: 100%;
			}

			&_returnSegment &__item_date {
				padding-left: 1px;
			}

			&_CR &__item {
				width: 39.4%;

				&_date {
					width: 21.2%;
				}
			}

			&__input {
				margin: 0;
				//border-radius: 2px;
				padding: 0 10px;
				height: 40px;
				cursor: pointer;
				line-height: 40px;
				font-size: 105%;
				color: $nemo-color-text-main;
				&::-webkit-input-placeholder {
					line-height: 42px;
				}



				&, &:focus {
					border: 0;

					&::-webkit-input-placeholder {
						line-height: 40px;
					}
				}

				&:hover {
				}

				&_date {
					background-position: right 11px;
					background-repeat: no-repeat;
					padding-right: 36px;
				}

				&::-webkit-input-placeholder {
					line-height: 40px;
				}
			}

			&__item {
				display: inline-block;
				vertical-align: top;
				padding-right: 20px;
				position: relative;

				&_from, &_to {
					width: 37.9%;
				}

				&_date {
					width: 24.2%;
					padding-right: 0;
				}

				&__dummy {
					text-indent: 10px;
					line-height: 40px;
					font-size: 105%;
				}

				&__date {
					&__dummy {
						padding-right: 36px;
						font-size: 105%;

						&_short {
							display: none;
						}
					}

					&__indicator {
						position: absolute;
						line-height: 20px;
						width: 24px;
						text-align: center;
						top: 50%;
						margin-top: -12px;
						right: 10px;
						color: #636467;
						z-index: 1;
						opacity: 0.75;
						border-radius: 2px;
						border: 2px solid $nemo-color-main;
						font-size: 14px;
						background: url('data:image/svg+xml;base64,');
						background: linear-gradient(to bottom, rgba(255,255,255,0.75) 0%,rgba(255,255,255,0.92) 50%,rgba(227,229,231,0.92) 51%,rgba(227,229,231,1) 75%);

						&:after {
							content: '';
							position: absolute;
							top: 50%;
							left: 0;
							right: 0;
							height: 2px;
							margin-top: -1px;
							background: $nemo-color-main;
						}
					}
				}

				&__inputContainer {
					margin: 0;
				}
			}
		}

		&__switchToRT {
			line-height: 40px;
			background: rgba($nemo-color-LightPoint, .25);
			border-radius: 2px;
			padding: 0 35px;
			text-align: center;
			overflow: hidden;
			white-space: nowrap;
			text-overflow: ellipsis;
			cursor: pointer;
			transition: all $nemo-transition-main ease-in;

			&:hover {
				box-shadow: $i_flights_form_segment_toRT_hover;
			}
		}

		&__switchToOW {
			position: absolute;
			z-index: 10;
			top: -10px;
			right: -10px;
			width: 20px;
			height: 20px;
			border-radius: 50%;
			background: $nemo-color-LightPoint url("images/fsf-sprite.svg") 6px -54px no-repeat;
			cursor: pointer;
			transition: all 0.2s;
			opacity: 0.5;

			&:hover {
				box-shadow: 0 0 5px rgba(#000, 0.2);
				opacity: 1;
			}
		}

		&__continueCR {
			line-height: 40px;
			background: rgba($nemo-color-LightPoint, .25);
			border-radius: 2px;
			cursor: pointer;
			transition: all 0.2s;
			text-align: center;
			margin: 0 0 20px 0;

			&:hover {
				box-shadow: $i_flights_form_segment_toRT_hover;
			}

			&_inactive {
				opacity: 0.5;
				cursor: default;

				&:hover {
					box-shadow: none;
				}
			}
		}

		&__removeCRSegment {
			position: absolute;
			width: 28px;
			height: 26px;
			background: #B23E13 url("images/fsf-sprite.svg") 7px -83.5px no-repeat;
			top: 50%;
			right: 100%;
			cursor: pointer;
			margin-top: -13px;

			&:hover {
				background-color: lighten(#B23E13, 10%);
			}

			&_inactive {
				display: none;
			}
		}
	}

	&__routeOptions {
		display: table-row;

		&__inner {
			display: table-cell;
			padding: 10px 0;
			/*position: relative;*/

			&:before {
				content: '';
				position: absolute;
				z-index: 0;
				background: $nemo-color-container-vivid_secondary_alt;

				left: 0;
				right: 0;
				bottom 0;

				height: 50px;
			}
		}

		&_CR &__item {
			&_routeType, &_class {
				width: 39.4%;
			}
		}

		&__item {
			display: inline-block;
			vertical-align: middle;
			padding-right: 20px;
			text-align: right;
			position: relative;
			z-index: 1;

			&_routeType, &_class {
				width: 80% * .379;
			}

			&_direct, &_multiDate {
				text-align: left;
			}

			&__selector {
				display: inline-block;
				position: relative;
				margin-left: 10px;
				vertical-align: middle;
				box-shadow: none;

				&__button {
					//line-height: 30px;
					//height: 30px;
					//box-shadow: none;
					padding-left: 10px;
					padding-right: 30px;
					text-align: left;
					display: block;

					&:after {
						right: 9px;
					}

					//.select2-selection__arrow {
					//	width: 33px;
					//}
				}

				&__dropdown {
				//	background: $nemo-color-LightPoint;
				//	border-radius: 4px;
				//	box-shadow: 0 1px 4px rgba(#000,.25);
				//	overflow: hidden;
				//
				//	position: absolute;
				//	margin-top: 5px;
				//	z-index: 50;
				//
					&__item {
				//		font-size: 13px;
				//		color: #636467;
				//		line-height: 20px;
				//		padding: 10px;
				//		cursor: pointer;
				//		border-bottom: 1px solid #D7D7D7;
				//		transition: all .2s;
				//		min-width: 100px;
				//		text-align: left;
				//
				//		&:last-child {
				//			border: none;
				//		}
				//
				//		&:hover {
				//			background: rgba($nemo-color-main, 0.25);
				//		}
					}
				}
			}

			&__checkbox {
				padding: 0;

				&__caption {
					//font-size: 14px;
					color: $nemo-color-LightPoint;
					transition: all $nemo-transition-main ease;
				}

				&:hover &__caption {
					color: darken($nemo-color-LightPoint, 1%);
				}
			}
		}
	}

	&__passengers {
		width: 11.6%;
		white-space: nowrap;
		position: relative;
		padding-left: 20px;

		&__containerColumn {
			display: none;
			@extend .nemo-flights-form__routeOptions__item__selector__button;
			text-align: left;
			/*margin: 0;*/
			/*line-height: 30px;*/
			/*height: 30px;*/
		}

		&__container {
			/*min-width: 120px;*/
			/*max-width: 140px;*/
			width: 140px;
			height: 40px;
			line-height: 40px;
			font-size: 105%;
			color: $nemo-color-text-main;
			background: $nemo-color-LightPoint;
			padding: 0 40px 0 10px;
			box-shadow: $i_flights_form_segment_input_bsh;
			border-radius: 2px;
			cursor: pointer;
			overflow: hidden;
			text-overflow: ellipsis;
			transition: all 0.2s;
			position: relative;

			&:hover {
				box-shadow: $i_flights_form_segment_input_bsh_hover;
				background: $nemo-color-LightPoint;
			}
		}

		&__fastSelect {
			display: block;
		}
	}

	&__passengersPopUp {
		margin: 0 -10px;
		display: none;

		&__item {
			display: inline-block;
			vertical-align: top;
			margin: 0 10px;
			font-size: 13px;
			white-space: normal;

			&__header {
				font-size: 14px;
			}

			&__subheader {
				color: $nemo-color-text-secondary;
				min-height: 35px;
			}

			&__count {
				padding: 0 15px;
				line-height: 30px;
				min-width: 100px;
				margin-top: 5px;
				border-radius: 8px;
				background: rgba(#969599, 0.1);
				cursor: pointer;
				transition: all 0.2s;
				white-space: nowrap;

				&:first-child {
					margin: 0;
				}

				&:hover {
					color: inherit;
					background: rgba(#52A2CC, 0.25);
				}

				&_active {
					color: $nemo-color-LightPoint;
					background: #52A2CC;

					&:hover {
						color: $nemo-color-LightPoint;
						background: rgba(#52A2CC, 0.75);
					}
				}

				&_disabled {
					opacity: 0.2;
					cursor: default;

					&:hover {
						color: inherit;
						background: rgba(#969599, 0.1);
					}
				}
			}
		}
	}

	&__routeTypeSelector {
		padding: 20px;
		position: relative;
		display: none;

		&__button {
			line-height: 40px;
			height: 40px;
			min-width: 200px;
			text-align: center;
			font-size: 13px;
			display: inline-block;
			/*vertical-align: middle;*/
			/*background: #e5e5e5 linear-gradient(to top, #e5e5e5, #f2f2f2);*/
			color: #636467;
			cursor: pointer;
			transition: all 0.2s;
			position: relative;
			box-shadow: none;
			border-radius: 0;

			&:after {
				content: '';
				position: absolute;
				height: 25px;
				width: 1px;
				background: #BDBDBD;
				top: 8px;
				right: 0;
			}

			&:last-child {
				border-top-right-radius: $d_ui_button_borderradius;
				border-bottom-right-radius: $d_ui_button_borderradius;

				&:after {
					display: none;
				}
			}

			&:first-child {
				border-top-left-radius: $d_ui_button_borderradius;
				border-bottom-left-radius: $d_ui_button_borderradius;
			}

			/*&:hover {*/
				/*background-image: linear-gradient(to top, #f2f2f2, #fafafa);*/
			/*}*/

			&_active {
				background: $nemo-color-main;
				color: $nemo-color-LightPoint;
				margin-left: -1px;
				box-shadow: inset 0 0 5px rgba(#000, 0.2);

				&:after {
					display: none;
				}

				&:hover {
					background: lighten($nemo-color-main, 10%);
				}
			}
		}

		&__selectWrap {
			position: relative;
			display: inline-block;
			vertical-align: middle;
		}

		&__select {
			@extend .nemo-flights-form__routeOptions__item__selector__button;
			margin: 0;
			line-height: 30px;
			height: 30px;
		}
	}

	&__searchingInfoPopup {
		padding: 0;

		&__content {
			display: none;
			width: 80vw;
			max-width: 700px;
			padding: 5px 20px 20px;
		}

		&__header {
			padding-left: 55px;

			&:after {
				content: '';
				position: absolute;
				width: 20px;
				height: 20px;
				background: url('images/fsf-sprite.svg') -30px -60px no-repeat;
				top: 50%;
				left: 20px;
				margin-top: -10px;
				animation: nemo-flights-form__searchingInfoPopup__headerAnimation 1s infinite;
			}
		}
	}

	&__searchingInfo {
		color: $nemo-color-text-main;
		font-size: 13px;
		line-height: 20px;

		&__subHeader {
			margin-bottom: 10px;
		}

		&__segment {
			margin-bottom: 20px;
			padding: 0 10px;

			&__inner {
				background: rgba(0, 0, 0, 0) linear-gradient(to bottom, #f2f2f2, #e5e5e5) repeat scroll 0 0;
				border-radius: 4px;
				padding: 10px 20px 10px 55px;
				position: relative;
				line-height: 20px;

				&:before {
					content: '';
					position: absolute;
					width: 20px;
					height: 20px;
					left: 20px;
					top: 50%;
					margin-top: -10px;
					background: transparent url('images/fsf-sprite.svg') -30px 0px no-repeat;
				}
			}

			&:last-child {
				margin: 0;
			}

			&:nth-child(2n) &__inner:before {
				background-position: -30px -30px;
			}

			&__date {
				font-size: 12px;
				color: $nemo-color-text-secondary;
			}

			&__route {
				overflow: hidden;
				white-space: nowrap;
				text-overflow: ellipsis;

				&__departure {
					&:after {
						content: '';
						display: inline-block;
						height: 10px;
						width: 30px;
						background: url('images/fsf-sprite.svg') -25px -84px no-repeat;
					}
				}
			}
		}

		&__segments {
			margin: 0 -10px;
		}

		&__segments_RTLike &__segment {
			display: inline-block;
			width: 50%;
			margin-bottom: 0;
		}
	}
}

@keyframes nemo-flights-form__searchingInfoPopup__headerAnimation {
	0% {transform: rotate(0deg);}
	100% {transform: rotate(360deg);}
}