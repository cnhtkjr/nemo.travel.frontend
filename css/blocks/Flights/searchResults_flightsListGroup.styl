.nemo-flights-results__flightsListGroup {
	display: flex;
	flex-flow: row nowrap;
	align-items: center;
	padding: 0;
	position: relative;

	&__segments {
		flex-basis: 100%;
		min-width: 1px;
	}

	&__segment {
		border-top: $i_ui_subContainer_divider_border;
		padding-right: 20px;
		display: flex;
		align-items: stretch;
		flex-flow: row nowrap;
		justify-content: flex-start;
		text-overflow: ellipsis;
		min-height: 65px;

		&:first-child {
			border-top: 0;
		}

		&:only-child {
			min-height: 100px;
		}

		&:only-child &__selected {
			padding-top: 23px;
			padding-bottom: 23px;
			height: 100px;
		}

		&__carrier {
			flex: 0 0 140px;
			width: 140px;
			padding: 10px 20px;
			border-right: $i_ui_subContainer_divider_border;
			display: flex;
			align-items: center;
			justify-content: center;
			min-width: 1px;

			&__logo {
				height: auto;
				max-height: 40px;
				max-width: 95px;
			}
		}

		&__selector {
			min-width: 1px;
			border-right: $i_ui_subContainer_divider_border;
			display: inline-block;
			vertical-align: middle;
			flex-shrink: 0;
			flex-grow: 0;
			flex-basis: 370px;
		}

		&__selected {
			min-width: 250px;
			border-radius: 0;
			padding: 7px 20px;
			height: 65px;
			line-height: 20px;
			transition: all $nemo-transition-main;
			background: transparent;
			color: $nemo-color-text-main;

			&:hover, &:active {
				background: rgba($nemo-color-main, .1);
			}

			&_unopenable {
				cursor: auto;

				&:after {
					display: none;
				}

				&:hover, &:active {
					background: transparent;
				}
			}

			&__departure, &__arrival {
				display: inline-block;
				vertical-align: top;
			}

			&__arrival {
				position: relative;
				width: 140px;

				&__nextDayWarn {
					position: absolute;
					top: 110%;
					left: 0;
					font-size: 10px;
					color: $nemo-color-text-secondary;
					line-height: 10px;
					white-space: nowrap;
				}
			}

			&__departure {
				padding-right: 40px;
				position: relative;
				width: 185px;

				&:after {
					content: '';
					position: absolute;
					top: 50%;
					right: 15px;
					margin-top: -10px;
					width: 18px;
					height: 20px;
					background: url("images/flights_results_sprite.svg") -70px 0 no-repeat;
				}
			}

			&__time {
				display: inline-block;
				vertical-align: baseline;
				font-size: 17px;
				min-width: 50px;
				color: #636467;
				line-height: 17px;

				&_nextDay {
					color: $nemo-color-notification_error_text;
				}
			}

			&__date {
				display: inline-block;
				vertical-align: baseline;
				color: $nemo-color-text-main;
				font-size: 10px;
				line-height: 10px;

				&_nextDay {
					color: $nemo-color-notification_error_text;
				}
			}

			&__portName, &__city {
				font-size: 12px;
				line-height: 15px;
				overflow: hidden;
				white-space: nowrap;
				text-overflow: ellipsis;
			}

			&__moreFlights {
				position: absolute;
				line-height: 20px;
				font-size: 13px;
				color: $nemo-color-text-secondary;
				right: 45px;
				top: 50%;
				margin-top: -10px;
				display: none;
			}
		}

		&__additionalDetails {
			display: flex;
			flex-wrap: nowrap;
			align-items: center;
			flex: 1 1 auto;
			padding: 5px 0 5px 20px;
			min-width: 1px;

			&__info {
				flex: 1 1 auto;
				min-width: 1px;
				padding-right: 10px;
			}

			&__aux {
				text-align: right;
				white-space: nowrap;
				flex: 0 0 auto;
				min-width: 1px;
			}
		}

		&__seatsAvailable {
			color: $nemo-color-text-secondary;
			overflow: hidden;

			&_warning {
				color: $nemo-color-notification_error_text;
			}
		}

		&__class {
			overflow: hidden;
			font-size: 11px;
		}

		&__timeEnRoute {
			white-space: nowrap;
			overflow: hidden;
			text-overflow: ellipsis;
			line-height: 15px;
			margin-bottom: 5px;
		}

		&__details {
			padding-left: 5px;
			padding-right: 5px;
			width: 80px;
			margin-left: 10px;
			flex: 0 0 auto;
			min-width: 1px;

			display: none;
		}

		&__transfers {
			line-height: 14px;

			&__count {
				white-space: nowrap;
				overflow: hidden;
				text-overflow: ellipsis;
				line-height: 20px;
			}

			&__details {
				overflow: hidden;
				white-space: nowrap;
				text-overflow: ellipsis;
			}

			&__time, &__places {
				color: $nemo-color-text-secondary;
				font-size: 80%;
			}
		}

		&__dropdown {
			&__option {
				@extend .nemo-flights-results__flightsGroup__leg__selector__dropdown__option;
				padding: 0 5px;

				&__data {
					padding: 10px 10px;
				}

				&__departure, &__arrival {
					font-weight: 500;
					font-size: 120%;
				}

				&__arrival {
					&__nextDayDate {
						font-size: 70%;
					}
				}

				&__transfers {
					min-width: 43px;


					&__transfer {
						margin-left: 2px;
						margin-right: 2px;
					}
				}
			}
		}
	}

	&__buyButtonCnt {
		padding: 10px 20px;
		flex-shrink: 0;
		align-self: stretch;
		border-left: $i_ui_subContainer_divider_border;
		min-width: 1px;
		display: flex;
		flex-flow: row wrap;
		align-items: center;

		&__inner {
			text-align: center;
		}
	}

	&__buyButton {
		@extend .nemo-flights-results__flightsGroup__buyButton;
		font-size: 140%;
		padding: 0 10px 0 45px;
		min-width: 160px;
		height: 50px;
		line-height: 50px;
		display: block;
		text-align: center;

		&__checkText {
			display: none;
		}

		&_bookingCheck{
			@extend .nemo-flights-results__flightsGroup__buyButton_bookingCheck;
			padding: 0 40px 0 10px;
			font-size: 120%;
		}

		&_bookingCheck &__text {
			display: none;
		}

		&_bookingCheck &__checkText {
			display: inline;
		}
	}

	&__fullDetails {
		border-top-left-radius: 0;
		border-top-right-radius: 0;
	}

	&__pricingDebugLink {
		text-align: right;
		display: block;
	}
}