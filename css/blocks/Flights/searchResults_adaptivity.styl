			&__notification {
				display: none;
			}

			&__filterList__filter {
				&__caption__name {
					color: $c_common_textColor;
				}

				&__valuesBlock__values__value {
					border: 1px solid #E5E5E5;
					border-bottom: none;

					&:last-child {
						border: 1px solid #E5E5E5;
					}
				}
			}
		}

		&__content {
			&__results {
				flex-basis: 100%;
			}

			&__postfilters_forced {
				display: block;
			}
		}
	}

}

// 751px - 1440px - semi-wide showcase, recommended and only item - as full with 2 legs as row, otherwise - condensed
@media (min-width 751px) and (max-width: 1600px) {
	.nemo-flights-results__showcase {
		&__item_recommended,
		&_oneItem {
			adapt_flights_results_2legsAsRow();
		}

		&__item_fastest,
		&__item_cheapest,
		&_severalJoined {
			adapt_flights_results_condensedGroup();
		}
	}
}

