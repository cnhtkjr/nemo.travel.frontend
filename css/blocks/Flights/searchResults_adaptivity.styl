				box-shadow: none;
				background: $nemo-color-main;
				color: #fff;
				display: block;
				width: 100%;
				padding: 10px;
			}

			&__passengers {
				padding: 0;
			}

			&__route {
				padding: 0;
				white-space: normal;

				&__segment {
					display: block;

					&__date {
						color: inherit;
					}

					&__geo {
						&_departure:after {
							background: transparent;
							content: 'â€”';
							height: auto;
							vertical-align: baseline;
						}

						&__aux {
							display: none;
						}
					}
				}
			}
		}
	}
}

