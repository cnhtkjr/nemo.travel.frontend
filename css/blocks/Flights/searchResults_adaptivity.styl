adapt_flights_results_condensedGroup() {
	.nemo-flights-results__flightsGroup {
		.nemo-flights-results__flightsGroup__header__title,
		&_bestCompanies .nemo-flights-results__flightsGroup__header__title {
			visibility: hidden;
		}

		&__header {
			&__logo {
				max-width: 100px;
			}
		}

		&__rating_inHeader {
			display: none;
		}

		&__subHeader {
			display: flex;
		}

		&__leg {
			&__info {
				display: none;
			}

			&__selector {
				&__selected {
					padding-left: 10px;

					&:before {
						display: none;
					}
				}

				&__header {
					font-size: 12px;
					line-height: 30px;

					&__title__text {
						&_short {
							display: none;
						}

						&_dates {
							display: block;
						}
					}
				}
			}
		}

		&__footer {
			padding-top: 10px;
			padding-bottom: 10px;

			&__buyButtonContainer__disclaimer {
				display: none;
			}

			&__disclaimer {
				display: block;
			}
		}

		&__couplingButton__addText {
			display: none;
		}
	}
}

adapt_flights_results_2legsAsRow() {
	.nemo-flights-results__flightsGroup {
		&__legs_count_2 {
			display: flex;
			flex-flow: row nowrap;
			align-content: stretch;
			min-width: 1px;
		}

		&__legs_count_2 .nemo-flights-results__flightsGroup__leg {
			border-right: $i_ui_subContainer_divider_border;
			border-right-style: dashed;
			flex: 0 0 50%;
			min-width: 1px;

			&:last-child {
				border-right: none;
			}
		}
	}
}

