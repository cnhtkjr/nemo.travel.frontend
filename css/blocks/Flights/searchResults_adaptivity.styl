// < 470px - supercondensed view of wrappers
@media (max-width: 470px) {

	adapt_flights_results_list_condensedSegmentInfo();

	.nemo-flights-results {
		&__adaptivePF {
			overflow: hidden;
		}

		&__summary {
			&__filters {
				width: auto;
				max-width: 100vw;
				position: fixed;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;

				z-index: 1000;
				opacity: 1;
				padding: 45px 10px 55px;
				white-space: normal;

				background: $c_ui_popup_wrapprer_bg;
				overflow: auto;

				display: block;
				margin: 0;

				&__header, &__controls {
					display: block;
				}

				&__filters {
					opacity: 1;
					padding: 10px;
					max-height: 100%;
					overflow: auto;
					margin: 0;

					// Dirty hack that prevents lag on mobile webkit while scrolling
					> * {
						-webkit-transform: translate3d(0, 0, 0);
					}
				}

				.nemo-common-postFilters__clearAll {
					display: none;
				}
			}
		}

		.nemo-common-postFilters__filterList__filter__valuesBlock {
			&_slider .nemo-common-postFilters__filterList__filter__valuesBlock__values__value {
				border: none;
				padding: 0;
			}
		}

		&__content {
			display: block;
			margin-bottom: 10px;

			&__results {
				margin: 0;
				padding: 0;
				border-radius: 0;
				background: none;
				box-shadow: none;

				&__controls {
					padding: 0 10px;

					&__item {
						padding: 0;
						margin-top: 10px;

						&:first-child {
							margin-top: 0;
						}

						&_displayType {
							white-space: normal;
						}

						&_count {
							color: $nemo-color-LightPoint;
						}

						&__sortTitle, &__displayTypeTitle {
							display: none;
						}

						&__sort {
							display: block;

							.nemo-ui-select__toggle {
								width: 100%;
							}
						}

						&__displayTypeSelector {
							display: block;

							&__option {
								margin: 0!important;
								width: 50%;

								&:first-child {
									padding-right: 5px;
								}

								&:last-child {
									padding-left: 5px;
								}

								&__button {
									display: block;
								}
							}
						}
					}
				}

				&__loadingDummy {
					padding: 0 10px;

					.nemo-flights-form__searchingInfo {
						&__header, &__subHeader {
							color: $nemo-color-LightPoint;
						}
					}
				}

				&__loadingDummyDivider {
					display: none;
				}
			}
		}

		&__showcase {
			margin: 0px;
			padding: 0px;

			&_resultLoadingDummy {
				margin-top: 20px;
			}

			&__item:first-child {
				padding-top: 0;
			}
		}

		&__flightsGroup__header {
			&__title {
				display: none;
			}

			&__additional {
				width: 100%;
				text-align: center;
			}

			&__logo {
				margin-left: 0;
			}
		}

		&__groupList {
			padding: 0 10px;
			margin: 0;
		}
	}
}

