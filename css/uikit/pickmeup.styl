$instance_width=258px;

.nemo-pmu-wrapper {
	background: $nemo-color-LightPoint;
	display: none;
	position: absolute;
	box-shadow: 0 0 16px $nemo-color-container-shadow;
	font-size: 13px;
	z-index: 99;
	margin-top: 5px;
	border-radius: $nemo-border-radius;
	div {
		display: inline-block;
	}
	&_flat{
		display: block;
	}
}

.nemo-pmu-instance {
	display: inline-block;
	text-align: center;
	width: $instance_width;
	border-radius: $nemo-border-radius;
	vertical-align: top;
}

.nemo-pmu-yearWrap,
.nemo-pmu-monthWrap {
	padding: 10px;
}

.nemo-pmu-dayWrap {
	padding: 0 10px 10px;
}

.nemo-pmu-button {
	color: #414042;
	cursor: pointer;
	outline: none;
	text-decoration: none;
	&:hover {
		background: $nemo-color-datepicker-highlight;
		color: #414042;
	}
}

.nemo-pmu-years,
.nemo-pmu-months,
.nemo-pmu-days {
	border: 1px solid $nemo-color-container-separator;
	border-radius: $nemo-border-radius;
	padding: 7px;
	margin-bottom: 14px;
	width: 220px;
}

.nemo-pmu-years,
.nemo-pmu-months {
	margin-top: 14px;
}

.nemo-pmu-month {
	font-size: 110%;
}

.nemo-pmu-days_day ,
.nemo-pmu-months_month ,
.nemo-pmu-years_year  {
	border-right: 1px solid $nemo-color-container-separator;
	border-bottom: 1px solid $nemo-color-container-separator;
}

.nemo-pmu-months_month{
	text-transform: capitalize;
}
.nemo-pmu-days .nemo-pmu-button {
	&:nth-child(7n) {
		border-right: 0px;
	}
	&:nth-child(35) ~ div {
		border-bottom: 0px;
	}
}

.nemo-pmu-months .nemo-pmu-button,
.nemo-pmu-years .nemo-pmu-button {
	&:nth-child(4n) {
		border-right: 0px;
	}
	&:nth-child(8) ~ div {
		border-bottom: 0px;
	}
}

.nemo-pmu-days_day {
	width: 29px;
	height: 29px;
	line-height: 29px;
	transition: all $nemo-transition-main ease-in;
}

.nemo-pmu-today {
	//outline: 1px solid $nemo-color-link;
	border-color: $nemo-color-link;
	color: $nemo-color-link;
	border-left: 1px solid;
	border-top: 1px solid;
	margin-top: -1px;
	margin-left: -1px;
	width: 30px;
	height: 30px;
	&:hover {
		background: $nemo-color-datepicker-highlight;
		color: $nemo-color-link;
	}
}

.nemo-pmu-disabled,
.nemo-pmu-disabled:hover {
	color: #BDBDBD;
	cursor: default;
	background: inherit;
}

.nemo-pmu-selected {
	//background: #4EB1E5;
	//color: #eee;
}

.nemo-pmu-not-in-month.nemo-pmu-selected {
	background: $nemo-color-datepicker-selected;
}


.nemo-pmu-date_hilighted {
	background: $nemo-color-datepicker-selected;

	border-color: $nemo-color-link !important;
	color: $nemo-color-LightPoint;
	border-left: 1px solid;
	border-top: 1px solid;
	margin-top: -1px;
	margin-left: -1px;
	width: 30px;
	height: 30px;

	&:hover {
		background: lighten($nemo-color-datepicker-selected, 5);

		border-color: lighten($nemo-color-link, 5) !important;
		color: $nemo-color-LightPoint;
		border-left: 1px solid;
		border-top: 1px solid;
		margin-top: -1px;
		margin-left: -1px;
		width: 30px;
		height: 30px;
	}
}

.nemo-pmu-notInMonth {
	color: #BDBDBD;
	background-color: transparent;
	//color: rgba(#BDBDBD, 0.5);
}

.nemo-pmu-date_period {
	background: $nemo-color-datepicker-period;
}

.nemo-pmu-monthHeader {
	background: $nemo-color-container-header;
	position: relative;
	line-height: 40px;
	text-transform: capitalize;
	.nemo-pmu-button {
		color: $nemo-color-LightPoint;
	}
}
//necessary due to 2-or-more-calendars view
.nemo-pmu-instance .nemo-pmu-prev,
.nemo-pmu-instance .nemo-pmu-next {
	display: none;
	font-size: 18px;
	height: 36px;
	position: absolute;
	width: 18px;
	background: url('images/datepicker-arrow.png') no-repeat center transparent;
	font-size: 0;
	&:hover{
		background: url('images/datepicker-arrow.png') no-repeat center transparent;
	}
	//i'm sorry.
	&_hidden{
		display: none!important;
	}
}
.nemo-pmu-instance:first-child{
	.nemo-pmu-monthHeader {
		border-radius: $nemo-border-radius 0 0 0;
	}
	.nemo-pmu-prev{
		display: inline-block;
	}
}
.nemo-pmu-instance:last-child{
	.nemo-pmu-monthHeader {
		border-radius: 0 $nemo-border-radius 0 0;
	}
	.nemo-pmu-next{
		display: inline-block;
	}
}
.nemo-pmu-prev {
	left: 12px;
	top: 3px;
	transform: rotate(180deg);
}

.nemo-pmu-next {
	top: 3px;
	right: 12px;
}

.nemo-pmu-month {
	width: auto;
}

.nemo-pmu-years *,
.nemo-pmu-months * {
	display: inline-block;
	line-height: 3.8em;
	width: 3.8em;
}

.nemo-pmu-dayOfWeek {
	color: $nemo-color-text-secondary;
	cursor: default;
	font-size: 85%;
	display: inline-block;
	line-height: 2em;
	width: 30px;
	text-transform: capitalize;

	&:nth-child(6), &:nth-child(7) {
		color: $nemo-color-link;
	}
}

.nemo-pmu-wrapper:not(.nemo-pmu-viewDays) .nemo-pmu-daysWrap,
.nemo-pmu-wrapper:not(.nemo-pmu-viewDays) .nemo-pmu-dayOfWeek,
.nemo-pmu-wrapper:not(.nemo-pmu-viewMonths) .nemo-pmu-monthsWrap,
.nemo-pmu-wrapper:not(.nemo-pmu-viewYears) .nemo-pmu-yearsWrap {
	display: none;
}

.nemo-pmu-thinView {
	max-width: $instance_width;
}

.nemo-pmu-viewMonths, .nemo-pmu-viewYears{
	.nemo-pmu-instance{
		.nemo-pmu-prev, .nemo-pmu-next{
			display: none;
		}
	}
}